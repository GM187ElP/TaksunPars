

@page "/upload-payslips"
@inject HttpClient Http

<h3>Upload Payslip</h3>

<InputFile OnChange="HandleFileSelected" />

@if (!string.IsNullOrEmpty(Message))
{
    <p style="color:@(Success ? "green" : "red")">@Message</p>
}


@code {
    private string Message = "";
    private bool Success = false;

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        try
        {
            var file = e.File; // <-- this is the correct way to get the file

            using var stream = file.OpenReadStream(10 * 1024 * 1024);
            using var ms = new MemoryStream();
            await stream.CopyToAsync(ms);
            ms.Position = 0;

            var content = new MultipartFormDataContent();
            var fileContent = new StreamContent(ms);
            fileContent.Headers.ContentType = new System.Net.Http.Headers.MediaTypeHeaderValue(file.ContentType);

            content.Add(fileContent, "payslipFile", file.Name);

            var response = await Http.PostAsync("payslip/upload", content);

            if (response.IsSuccessStatusCode)
            {
                Message = "Upload successful.";
                Success = true;
            }
            else
            {
                Message = "Upload failed: " + await response.Content.ReadAsStringAsync();
                Success = false;
            }
        }
        catch (Exception ex)
        {
            Message = "Error: " + ex.Message;
            Success = false;
        }
    }
}
